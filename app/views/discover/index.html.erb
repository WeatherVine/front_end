<div class="container">
  <h1 class="page-header">Search For Wines</h1>
</div>

<%= form_with url: wines_search_path, method: :get, id: 'search-form' do |form| %>
  <div class='form-group'>
    <%= form.label :vintage, 'Vintage:' %>
    <%= form.text_field :vintage, class: 'form-control' %>
  </div>
  <div class='form-group'>
    <%= form.label :location, 'Location:' %>
    <%= form.text_field :location, class: 'form-control' %>
  </div>
  <%= form.submit 'Search', class: 'btn btn-primary'%>
<% end %>
